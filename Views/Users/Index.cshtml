@model IEnumerable<WebApplication1.Models.UserViewModel>

@{
    ViewData["Title"] = "Üye Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">Üye Listesi</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kullanıcılar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kullanıcı Adı</th>
                            <th>Email</th>
                            <th>Yetki</th>
                            <th style="width: 250px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                var isAdmin = user.Roles.Contains("Admin");
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (isAdmin)
                                        {
                                            <span class="badge bg-danger">Yönetici</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Üye</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            @if (isAdmin)
                                            {
                                                <form asp-action="RevokeAdmin" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-user-minus"></i> Yetki Al
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="AssignAdmin" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-user-plus"></i> Admin Yap
                                                    </button>
                                                </form>
                                            }

                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">Kullanıcı bulunamadı.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>