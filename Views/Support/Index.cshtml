@model List<WebApplication1.Models.SupportTicket>
@{
    ViewData["Title"] = "Mesajlarım";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-envelope-open-text text-primary"></i> Mesajlarım / Destek</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill"><i class="fas fa-pen"></i> Yeni Mesaj Yaz</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-light text-center shadow-sm">Henüz bir mesajınız yok.</div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var item in Model)
            {
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@item.Subject</h5>
                        <small>@item.CreatedDate.ToShortDateString()</small>
                    </div>
                    <p class="mb-1">@item.Message</p>
                    <small>
                        Durum:
                        <span class="badge @(item.Status == "Beklemede" ? "bg-warning text-dark" : "bg-success")">
                            @item.Status
                        </span>
                    </small>
                </div>
            }
        </div>
    }
</div>