@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4">Ürün Satış Portalı</h1>
    <p class="lead">Hoşgeldiniz! En yeni ürünlerimizi aşağıda bulabilirsiniz.</p>
</div>

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary text-white d-flex justify-content-center align-items-center" style="height: 200px;">
                                <span>Resim Yok</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.Description</p>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Price.ToString("C")</h6>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="#" class="btn btn-primary w-100">İncele</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning" role="alert">
                    Henüz eklenmiş bir ürün bulunmamaktadır. Yönetici panelinden ürün ekleyebilirsiniz.
                </div>
            </div>
        }
    </div>
</div>